<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:backgroundTint="#f2f2f2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#95D37A"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="20dp"
         android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Center Name:"
            android:id="@+id/txt_centerName"
            android:textColor="@color/white"
            android:layout_marginTop="6sp"
            android:textSize="15sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Dose:"
            android:textStyle="bold"
            android:id="@+id/txt_available"
            android:textColor="@color/white"
            android:layout_marginTop="6sp"
            android:textSize="12sp"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Vaccine:"
                android:id="@+id/txt_Vaccine"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="6sp"
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minimum Age:"
                android:textStyle="bold"
                android:id="@+id/txt_minAge"
                android:layout_marginTop="6sp"
                android:textColor="@color/white"
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fee :"
                android:id="@+id/txt_feeTpye"
                android:layout_marginTop="6sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="12sp"
                />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>